{
  "name": "local-traffic",
  "version": "0.0.76",
  "main": "./dist/local-traffic.js",
  "private": false,
  "keywords": [
    "reverse-proxy",
    "proxy",
    "h2",
    "http2",
    "https",
    "websocket"
  ],
  "license": "MIT",
  "repository": "git@github.com:libetl/local-traffic.git",
  "author": "LiBe <libe4@free.fr>",
  "scripts": {
    "start": "./dist/local-traffic.js",
    "typescript": "tsc",
    "shebang": "echo '#!/usr/bin/env node' | cat - ./dist/minified.js > ./dist/local-traffic.js",
    "terser": "terser ./dist/index.js -c -m --toplevel > ./dist/terser.js",
    "remove-useless-whitespaces": "cat ./dist/terser.js | sed -r -s 's/\\\\n\\s*/\\\\n/g' > ./dist/minified.js",
    "chmod": "chmod a+x ./dist/local-traffic.js",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run typescript && npm run terser && npm run remove-useless-whitespaces && npm run shebang && npm run chmod",
    "crash-test": "node ./dist/local-traffic.js --crash-test",
    "test": "node ./test/tests.spec.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "terser": "^5.18.0",
    "typescript": "^5.1.3"
  },
  "bin": {
    "local-traffic": "./dist/local-traffic.js"
  },
  "engines": {
    "node": ">=8"
  }
}
